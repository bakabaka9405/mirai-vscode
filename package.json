{
	"name": "mirai-vscode",
	"displayName": "mirai-vscode",
	"description": "",
	"publisher": "bakabaka9405",
	"author": {
		"name": "bakabaka9405",
		"email": "bakabaka9405@gmail.com"
	},
	"version": "0.0.4",
	"engines": {
		"vscode": "^1.70.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"main": "./out/extension.js",
	"repository": {
		"type": "git",
		"url": "https://github.com/bakabaka9405/mirai-vscode.git"
	},
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "problems-explorer",
					"title": "试题集",
					"icon": "media/icon.svg"
				}
			],
			"panel": [
				{
					"id": "cases-panel",
					"title": "测试",
					"icon": "media/icon.svg"
				}
			]
		},
		"views": {
			"cases-panel": [
				{
					"id": "caseView",
					"name": "样例"
				},
				{
					"id": "inputView",
					"name": "输入",
					"type": "webview"
				},
				{
					"id": "outputView",
					"name": "输出",
					"type": "webview"
				},
				{
					"id": "expectedOutputView",
					"name": "期望输出",
					"type": "webview"
				}
			],
			"problems-explorer": [
				{
					"id": "problemsExplorer",
					"name": "所有试题",
					"contextualTitle": "试题集"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "problemsExplorer",
				"contents": "还没有试题。\n[添加试题](command:problemsExplorer.addProblem)\n[从文件夹添加试题](command:problemsExplorer.addProblemFromFolder)",
				"when": "!problemsExplorer"
			},
			{
				"view": "caseView",
				"contents": "还没有测试样例。\n[添加样例](command:caseView.addCase)\n",
				"when": "!caseView"
			}
		],
		"commands": [
			{
				"command": "problemsExplorer.renameProblem",
				"title": "重命名",
				"icon": "media/edit.svg"
			},
			{
				"command": "problemsExplorer.addProblem",
				"title": "添加试题",
				"icon": "media/add.svg"
			},
			{
				"command": "problemsExplorer.addProblemFromFolder",
				"title": "从文件夹添加试题",
				"icon": "media/folder-search.svg"
			},
			{
				"command": "problemsExplorer.deleteProblem",
				"title": "删除试题",
				"icon": "media/delete.svg"
			},
			{
				"command": "caseView.addCase",
				"title": "添加样例",
				"icon": "$(add)"
			},
			{
				"command": "caseView.deleteCase",
				"title": "删除样例",
				"icon": "$(trash)"
			},
			{
				"command": "caseView.renameCase",
				"title": "重命名样例",
				"icon": "media/edit.svg"
			},
			{
				"command": "caseView.testSingleCase",
				"title": "运行单个样例",
				"icon": "$(run)"
			},
			{
				"command": "caseView.testAllCase",
				"title": "运行所有样例",
				"icon": "$(run-all)"
			},
			{
				"command": "outputView.copyOutput",
				"title": "复制输出",
				"icon": "media/copy.svg"
			},
			{
				"command": "caseView.setting",
				"title": "配置",
				"icon": "$(gear)"
			},
			{
				"command": "caseView.stopRunning",
				"title": "停止运行",
				"icon": "$(primitive-square)"
			},
			{
				"command": "problemsExplorer.switchProblem",
				"title": "切换试题"
			},
			{
				"command": "expectedOutputView.contrast",
				"title": "对比输出",
				"icon": "media/contrast.svg"
			},
			{
				"command": "caseView.switchCase",
				"title": "切换样例",
				"group": "navigation"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "problemsExplorer.addProblem",
					"when": "view==problemsExplorer",
					"group": "navigation"
				},
				{
					"command": "problemsExplorer.addProblemFromFolder",
					"when": "view==problemsExplorer",
					"group": "navigation"
				},
				{
					"command": "caseView.addCase",
					"when": "view==caseView",
					"group": "navigation"
				},
				{
					"command": "caseView.setting",
					"when": "view==caseView",
					"group": "navigation"
				},
				{
					"command": "caseView.testAllCase",
					"when": "view==caseView",
					"group": "navigation"
				},
				{
					"command": "outputView.copyOutput",
					"when": "view==outputView",
					"group": "navigation"
				},
				{
					"command": "caseView.stopRunning",
					"when": "view==caseView",
					"group": "navigation"
				},
				{
					"command": "expectedOutputView.contrast",
					"when": "view==expectedOutputView",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "problemsExplorer.renameProblem",
					"when": "view==problemsExplorer && viewItem==problem",
					"group": "inline"
				},
				{
					"command": "problemsExplorer.deleteProblem",
					"when": "view==problemsExplorer && viewItem==problem",
					"group": "inline"
				},
				{
					"command": "caseView.testSingleCase",
					"when": "view==caseView && viewItem==case",
					"group": "inline",
					"order": 3
				},
				{
					"command": "caseView.deleteCase",
					"when": "view==caseView && viewItem==case",
					"group": "inline",
					"order": 2
				},
				{
					"command": "caseView.renameCase",
					"when": "view==caseView && viewItem==case",
					"group": "inline",
					"order": 1
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "Mirai-vscode",
			"properties": {
				"mirai-vscode.default_timeout": {
					"type": "number",
					"description": "默认超时时间(ms)",
					"default": 1000
				},
				"mirai-vscode.compiler_path": {
					"type": "string",
					"description": "编译器路径",
					"default": "g++"
				},
				"mirai-vscode.additional_include_path": {
					"type": "array",
					"description": "附加包含目录",
					"items": {
						"type": "string"
					},
					"default": []
				},
				"mirai-vscode.output_relative_path": {
					"type": "string",
					"description": "输出文件相对源文件的目录",
					"default": ""
				},
				"mirai-vscode.mix_stdout_stderr": {
					"type": "boolean",
					"description": "把标准错误输出也当作标准输出处理，如果你要使用 Address Sanitizer，启用这个功能。",
					"default": false
				},
				"mirai-vscode.compile_args": {
					"type": "array",
					"description": "编译参数",
					"items": {
						"type": "string"
					},
					"default": [
						"-std=c++20",
						"-O2"
					]
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/body-parser": "^1.19.5",
		"@types/mocha": "^10.0.6",
		"@types/node": "18.x",
		"@types/pidusage": "^2.0.5",
		"@types/vscode": "^1.70.0",
		"@typescript-eslint/eslint-plugin": "^6.19.1",
		"@typescript-eslint/parser": "^6.19.1",
		"@vscode/test-cli": "^0.0.4",
		"@vscode/test-electron": "^2.3.9",
		"eslint": "^8.56.0",
		"typescript": "^5.3.3"
	},
	"dependencies": {
		"body-parser": "^1.20.2",
		"express": "^4.18.2",
		"pidusage": "^3.0.2"
	}
}